<div class="container">
  <h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <div>
      <% if task.completed == true %>
        <i class="far fa-check-square"></i><%= link_to task.title, task_path(task) %>
      <% else %>
        <i class="far fa-square"></i><%= link_to task.title, task_path(task) %>
      <% end %>


      <%= link_to "delete?", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>


  <% end %>
</div>






